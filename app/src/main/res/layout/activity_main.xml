<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/bg_ui00">

    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"

        android:id="@+id/btnKeepbird"
        android:singleLine="false"
        android:onClick="keepBirds"
        android:nestedScrollingEnabled="true"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@drawable/btn_keepbird"
        android:layout_above="@+id/btnSearchpossition"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"

        android:id="@+id/btnSearchpossition"
        android:textStyle="bold"
        android:textSize="25sp"
        android:onClick="openMap"
        android:nestedScrollingEnabled="true"
        android:background="@drawable/btn_position"
        android:layout_above="@+id/btnBirdData"
        android:layout_alignLeft="@+id/btnKeepbird"
        android:layout_alignStart="@+id/btnKeepbird" />

    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"

        android:id="@+id/btnBirdData"
        android:onClick="birdData"
        android:textSize="25sp"
        android:textStyle="bold"
        android:background="@drawable/btn_databirds"
        android:layout_above="@+id/btnCollection"
        android:layout_alignLeft="@+id/btnSearchpossition"
        android:layout_alignStart="@+id/btnSearchpossition" />

    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"

        android:id="@+id/btnCollection"
        android:onClick="collection"
        android:textStyle="bold"
        android:textSize="25sp"
        android:background="@drawable/btn_collection"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/btnBirdData"
        android:layout_alignStart="@+id/btnBirdData"
        android:layout_marginBottom="70dp" />
</RelativeLayout>
