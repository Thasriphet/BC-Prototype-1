<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.wattana.bc_prototype_1.BirdsDataActivity"
    android:background="@drawable/bg_ui00">

    <ImageView
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bn_data"
        android:contentDescription="" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="90dp"
        android:layout_marginBottom="2dp"
        android:layout_alignParentBottom="true"
        android:paddingLeft="10dp">


        <Button
            android:layout_width="80dp"
            android:layout_height="77dp"
            android:text=""
            android:id="@+id/btn_iconkeep"
            android:background="@drawable/cycle500"
            android:layout_marginLeft="20dp"
            android:onClick="keepbird" />

        <Button
            android:layout_width="80dp"
            android:layout_height="77dp"
            android:id="@+id/btn_iconpos"
            android:background="@drawable/cyclemap"
            android:layout_marginLeft="20dp"
            android:onClick="openposition" />

        <Button
            android:layout_width="80dp"
            android:layout_height="77dp"
            android:id="@+id/btn_icondata"
            android:background="@drawable/cyclebag"
            android:paddingLeft="5dp"
            android:layout_marginLeft="20dp"
            android:onClick="birdcollection" />
    </LinearLayout>

    <ImageView
        android:layout_width="80dp"
        android:layout_height="77dp"
        android:id="@+id/img_a"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/cyclebird"
        android:clickable="true"
        android:onClick="gotobird" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="77dp"
        android:id="@+id/img_b"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="120dp"
        android:background="@drawable/cyclebird"
        android:clickable="true"
        android:onClick="gotobird" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="77dp"
        android:id="@+id/img_c"
        android:layout_below="@+id/imageView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="210dp"
        android:background="@drawable/cyclebird"
        android:clickable="true"
        android:onClick="gotobird" />




</RelativeLayout>
