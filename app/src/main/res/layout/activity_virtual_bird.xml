<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.wattana.bc_prototype_1.VirtualBirdActivity"
    android:background="@drawable/bg_ui00">

    <ImageView
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:id="@+id/bn_virtual"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/bn_virtual"
        android:contentDescription="keepbanner" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/imageView4"
        android:layout_marginTop="44dp"
        android:background="@drawable/cyclebird"
        android:layout_below="@+id/bn_virtual"
        android:layout_alignLeft="@+id/bn_virtual"
        android:layout_alignStart="@+id/bn_virtual" />

</RelativeLayout>
