<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="fill_parent"
    android:layout_height="fill_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="0dp"
    tools:context="com.example.wattana.bc_prototype_1.CollectionActivity"
    android:background="@drawable/bg_ui00">

    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"

        android:id="@+id/btnPhoto"

        android:textStyle="bold"
        android:textSize="25sp"
        android:background="@drawable/buttonvirtualbird_img3d"
        android:onClick="virtualbird"
        android:layout_below="@+id/btnVirtualbird"
        android:layout_alignLeft="@+id/btnVirtualbird"
        android:layout_alignStart="@+id/btnVirtualbird" />

    <Button
        android:layout_width="220dp"
        android:layout_height="80dp"

        android:id="@+id/btnVirtualbird"
        android:textStyle="bold"
        android:textSize="25sp"
        android:background="@drawable/buttonphoto3d"
        android:onClick="photobird"
        android:layout_below="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp" />

    <ImageView
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:id="@+id/imageView2"
        android:background="@drawable/bn_collection"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/btnPhoto"
        android:layout_alignStart="@+id/btnPhoto" />

    <LinearLayout
        android:layout_width="265dp"
        android:layout_height="70dp"
        android:layout_gravity="bottom"
        android:paddingLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/layout_front1">


        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:id="@+id/btn_iconhome"
            android:background="@drawable/buttonhome"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="home" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:id="@+id/btn_iconkeep"
            android:background="@drawable/buttonkeep"
            android:onClick="keepbird"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn_iconpos"
            android:background="@drawable/buttonmap"
            android:onClick="openposition"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
             />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn_icondata"
            android:background="@drawable/buttondata"
            android:paddingLeft="5dp"
            android:onClick="birddata"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>
    </LinearLayout>

</RelativeLayout>
