<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.wattana.bc_prototype_1.KasetFarm"
    android:background="@drawable/bg_ui00">

    <GridView
        android:layout_width="wrap_content"
        android:layout_height="450dp"
        android:id="@+id/gridView1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:numColumns="2"
        android:layout_below="@+id/imageView3"
        android:layout_above="@+id/linearLayout"
        android:alpha="80" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        >
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:id="@+id/btn_iconhome"
            android:background="@drawable/buttonhome"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="home" />
        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:id="@+id/btn_iconkeep"
            android:background="@drawable/buttonkeep"
            android:onClick="keepbird"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"/>

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:text=""
            android:id="@+id/btn_iconposition"
            android:background="@drawable/buttonmap"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="openposition" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn_iconpos"
            android:background="@drawable/buttondata"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:onClick="birddata" />

        <Button
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/btn_icondata"
            android:background="@drawable/buttonbag"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:onClick="birdcollection" />

    </LinearLayout>
</RelativeLayout>
